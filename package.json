{
    "name": "argus",
    "version": "7.0.2",
    "description": "ATLAS Resource Graphical User System - LCARS Prototype",
    "type": "module",
    "scripts": {
        "version:generate": "bash scripts/generate-version.sh",
        "build": "npm run version:generate && node scripts/bundle-docs.cjs && tsc",
        "watch": "npm run version:generate && tsc --watch",
        "serve": "npx http-server dist -p 8080 -c-1",
        "dev": "npm run build && npm run serve",
        "test": "vitest run"
    },
    "keywords": [
        "atlas",
        "argus",
        "medical-imaging",
        "federated-learning",
        "lcars"
    ],
    "author": "ATLAS Project Team",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^25.2.0",
        "http-server": "^14.1.1",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3",
        "vitest": "^4.0.18"
    }
}
